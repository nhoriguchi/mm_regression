##!1 BACKEND: anonymous thp

. $TRDIR/lib/setup_page_migration.sh

NUMA_NODE=2

BACKEND=__MARK_BACKEND

AUTO_NUMA=true

_control() {
    local pct=60
    local size=300

    lib/test_alloc_generic -B anonymous -N $size -L 'mmap busyloop' &
    local pid=$!
    
    echo lib/numa_move_pages
    for i in $(seq 10) ; do
		echo "current CPU: $(ps -o psr= $pid)"
        echo "expecting numa balance to optimize the situation ..."
        echo lib/numa_move_pages $size $pid 1 $pct
        lib/numa_move_pages $size $pid 1 $pct
        taskset -p 0x4 $pid
        grep ^70000000 /proc/$pid/numa_maps
        grep numa /proc/$pid/sched
        sleep 5
        grep ^70000000 /proc/$pid/numa_maps
        grep numa /proc/$pid/sched
        echo ""
		echo "current CPU: $(ps -o psr= $pid)"
        echo lib/numa_move_pages $size $pid 0 $pct
        lib/numa_move_pages $size $pid 0 $pct
        taskset -p 0x1 $pid
        grep ^70000000 /proc/$pid/numa_maps
        grep numa /proc/$pid/sched
        sleep 5
        grep ^70000000 /proc/$pid/numa_maps
        grep numa /proc/$pid/sched
        echo ""
    done
}

_prepare() {
	prepare_mm_generic || return 1
}

_cleanup() {
	cleanup_mm_generic
}
